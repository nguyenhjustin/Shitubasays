<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <ImageView android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_person" />

    <TextView android:id="@+id/quote_content"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/image_person"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="20sp" />

    <TextView android:id="@+id/quote_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/quote_content"
        android:layout_toRightOf="@id/image_person"
        android:paddingLeft="5dp"
        android:textSize="20sp" />

</RelativeLayout>