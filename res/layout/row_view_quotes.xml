<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_person" />

    <TextView android:id="@+id/quote_content"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_person"
        android:paddingLeft="5dp" />
<!--         android:ellipsize="end" -->
<!--         android:singleLine="true"  -->

    <TextView android:id="@+id/quote_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/quote_content"
        android:layout_toRightOf="@id/image_person"
        android:paddingLeft="5dp" />

</RelativeLayout>