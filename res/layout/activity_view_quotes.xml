<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.JHN.shitubasays.ViewQuotesActivity" >
        
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="50dp">
            
            <ImageView android:id="@+id/image_person" 
                android:contentDescription="@string/image_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/person" />
            
          <TextView android:id="@+id/quote"
              android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:paddingLeft="5dp"
              android:layout_toRightOf="@id/image_person"
              android:ellipsize="end"
              android:singleLine="true"
              android:text="Shut the fuck up, Sid" />
          
          <TextView android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:paddingLeft="5dp"
              android:layout_toRightOf="@id/image_person"
              android:layout_below="@id/quote"
              android:hint="Justin" />
        </RelativeLayout>
        
</ScrollView>